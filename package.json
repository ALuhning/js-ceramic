{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "npm ci && lerna bootstrap --hoist --ci",
    "test": "lerna run test",
    "build": "lerna run build",
    "docs": "typedoc --mode modules --disableOutputCheck --out ./docs/api --ignoreCompilerErrors --excludeExternals --excludePrivate --excludeNotExported --externalPattern '**/node_modules/**' --exclude '**/*.+(test).ts' --name 'Ceramic' --module commonjs .",
    "publish:next": "lerna publish --no-push --conventional-prerelease --dist-tag next",
    "publish:latest": "lerna publish --allow-branch master --conventional-graduate --create-release github",
    "lint": "lerna run lint",
    "clean": "rm -rf ./lib"
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "@types/node": "^14.11.5"
  }
}
